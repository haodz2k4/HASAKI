doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Login Form
    // Link to Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css', rel='stylesheet')
  body
    .container
      .row.justify-content-center.mt-5
        .col-md-4
          .card
            .card-body
              h3.text-center Login
              form(method="POST")
                .mb-3
                  label.form-label(for='email') Email address
                  input#email.form-control(type='email', placeholder='Enter your email',name='email', required='')
                .mb-3
                  label.form-label(for='password') Password
                  input#password.form-control(type='password', placeholder='Enter your password',name='password', required='')
                .d-grid
                  button.btn.btn-primary(type='submit') Login
          p.text-center.mt-3
            | Don&apos;t have an account? 
            a(href='#') Sign up
    // Bootstrap JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')