header.py-2.border-bottom(style='position: fixed;z-index: 9999;top: 0; width: 100%')
      .container.d-flex.justify-content-between.align-items-center
        .d-flex.align-items-center
          // Logo
          a.text-decoration-none(href='/')
            img(src='https://upload.wikimedia.org/wikipedia/commons/1/1b/EBay_logo.svg', alt='eBay Logo', height='40')
          // Shop by category
          .dropdown.ms-3
            a#shopCategory.text-decoration-none.text-dark.dropdown-toggle(href='/products', data-bs-toggle='dropdown', aria-expanded='false')
              | Sản phẩm 
            ul.dropdown-menu(aria-labelledby='shopCategory')
              li
                a.dropdown-item(href='#') Category 1
              li
                a.dropdown-item(href='#') Category 2
              li
                a.dropdown-item(href='#') Category 3
        // Search bar
        form(action="/products").d-flex.flex-grow-1.mx-1
          input.form-control.rounded-4.border-solid(type='search',value=keyword, placeholder='Search for anything',name='keyword' aria-label='Search',inp-search style='width: 80%')
          
          button.btn.btn-primary.rounded-0(style='margin-left: 10px; margin-right: 10px;', type='submit') Search 
          #suggestions.list-group.position-absolute(style='width: 41%; top: 50px; z-index: 100;' suggestion-keyword)
       
        // User options
        .d-flex.align-items-center
          a.me-3.text-decoration-none(href='/cart')
            i.fa-solid.fa-cart-shopping(style='font-size: 30px;')
          if user 
            a.me-3.text-decoration-none(href='/users/profiles').btn #{user.fullName}
          else 
            a.me-3.text-decoration-none(href='/users/login').btn.btn-warning Đăng Nhập 
            a.me-3.text-decoration-none(href='/users/register').btn.btn-danger Đăng ký 
        // Icons
        .d-flex.align-items-center
          a.text-dark.me-3(href='#')
            i.bi.bi-bell
          a.text-dark(href='#')
            i.bi.bi-cart