extends ../../layouts/default.pug 

block main 

    .container
      .order-detail
        h1.order-title Đơn hàng #{order.id}
        // Thông tin người dùng
        .row
          .col-md-6
            h4 Thông tin người dùng 
            p
              strong Email:
              |  #{order.user.email}
            p
              strong Phone:
              |  #{order.user.phone}
            p
              strong Address:
              |  #{order.user.address.street}; #{order.user.address.city}; #{order.user.address.country}
          .col-md-6
            h4 Order Status &amp; Payment
            p
              strong Trạng thái: 
              |  
              span #{order.status}
            p
              strong Phương thức thanh toán:
              |  #{order.paymentMethod}
            p
              strong Giá tiền ship:
              |  #{order.shippingCost}
            p
              strong Tổng tiền:
              |  #{order.totalPrice}
        // Bảng thông tin đơn hàng
        table.table.order-info-table
          thead
            tr
              th Thông tin 
              th Giá trị 
          tbody
            tr
              td
                strong Id đơn hàng 
              td #{order.id}
            tr
              td
                strong Created At
              td #{moment(order.createdAt)}
            tr
              td
                strong Trạng thái: 
              td #{order.status}
        // Bảng sản phẩm trong đơn hàng
        h4 Products in Order
        table.table.product-table
          thead
            tr
              th #
              th Product Name
              th Giá tiền
              th % giảm giá 
              th Số lượng 
          tbody
           each item, index in order.products 
            tr
              td #{index + 1}
              th #{item.productId.title}
              td #{item.price}
              td #{item.discountPercentage}
              td #{item.quantity}
            